<configuration debug="false">

  <appender name="CLOUDWATCH" class="com.kdgregory.logback.testhelpers.aws.TestableCloudWatchAppender">
    <logGroup>MyLog-{sysprop:TestCloudWatchAppender.testSubstitution}</logGroup>
    <logStream>MyStream-{timestamp}-{bogus}</logStream>
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%msg</pattern>
    </layout>
  </appender>

  <root level="off">
    <appender-ref ref="ch.qos.logback.core.helpers.NOPAppender" />
  </root>

  <logger name="com.kdgregory.logback.aws.TestCloudWatchAppender" level="debug">
    <appender-ref ref="CLOUDWATCH" />
  </logger>

</configuration>